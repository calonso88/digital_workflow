name: Behavioural Simulation Workflow with iverilog

on: [workflow_dispatch, workflow_call]

jobs:
  Run-Verilator-Lint-Workflow:
    runs-on: ubuntu-24.04
    steps:
      # Checkout repository
      - name: Checkout code
        uses: actions/checkout@v5
 
      # Get python packages
      - name: Install Python packages
        shell: bash
        run: pip install -r tb/bin/requirements.txt

      # Install Verilator
      - name: Verilator version
        uses: fossi-foundation/verilator-action@v0.3
        with:
          version: latest
          arguments: '--version'

      # Run behavioral simulation with Verilator
      - name: Verilator Behavioural simulation
        uses: fossi-foundation/verilator-action@v0.3
        with:
          version: latest
          run: | 
            cd tb
            make clean
            make SIM=verilator
            # make will return success even if the test fails, so check for failure in the results.xml
            | grep failure results.xml

      # Collect results
      - name: Test Summary
        if: always()
        uses: test-summary/action@v2.3
        with:
          paths: "tb/results.xml"

      # Upload simulation wave dump
      - name: Upload Waveform and Test Results
        if: success() || failure()
        uses: actions/upload-artifact@v4
        with:
          name: behavioural_test_results
          path: |
            tb/tb.vcd
            tb/tb.fst
            tb/results.xml
